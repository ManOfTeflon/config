{
    "diagnostic.level": "warning",
    "languageserver": {
        "golang": {
            "command": "gopls",
            "rootPatterns": [
                "go.mod",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "filetypes": [
                "go"
            ]
        }
    },
    "clangd.semanticHighlighting": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "rust",
        "go"
    ],

    "codeLens.enable": true,
    "typescript": {
        "autoClosingTags": false
    }
}
