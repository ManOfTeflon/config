Config {
    font = "xft:Inconsolata:size=10",
    bgColor = "black",
    fgColor = "grey",
    position = Top,
    lowerOnStart = False,
    commands = [
        Run StdinReader,
        Run Com "network-traffic" [ ] "" 10,
        Run Com "volume" [ ] "" 5,
        Run Cpu [
            "-H", "50",
            "-h", "red",
            "-n", "yellow",
            "-L", "10",
            "-l", "green"
        ] 10,
        Run Memory [
            "-t","Mem: <usedratio>%",
            "-H", "75",
            "-h", "red",
            "-n", "yellow",
            "-L", "50",
            "-l", "green"
        ] 10,
        Run Swap [
            "-t","Swap: <usedratio>%",
            "-H", "75",
            "-h", "red",
            "-n", "yellow",
            "-L", "50",
            "-l", "green"
        ] 10,
        Run BatteryP ["BAT0"] [
            "-t", "Batt: <acstatus><left>%",
            "-L", "25",
            "-l", "red",
            "-n", "yellow",
            "-H", "75",
            "-h", "green",
            "--",
            "-i", "<fc=green>*</fc>",
            "-O", "<fc=yellow>*</fc>",
            "-o", "<fc=red>*</fc>"
        ] 10,
        Run Date "%a %b %_d %l:%M" "date" 10,
        Run Weather "EGPF" [
            "-t", " <tempF>F",
            "-H", "85",
            "-h", "red",
            "-n", "green",
            "-L", "55",
            "-l", "lightblue"
        ] 36000
    ],
    sepChar = "%",
    alignSep = "}{",
    template = "%StdinReader% }{ %network-traffic% | %volume% | %cpu% | %memory% * %swap% | %battery%     <fc=#ee9a00>%date%</fc> | %EGPF%"
}
